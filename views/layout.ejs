<html>
    <head>
        <%- include('header') %>
    </head>
    <body>
        <div class="container-fluid">
            <nav class="navbar navbar-dark bg-primary navbar-fixed-top">
                <a class="navbar-brand" href="#">BBW Tool</a>
                <div class="nav navbar-nav">
                    <a class="nav-item nav-link" href="#">Test 1</a>
                    <a class="nav-item nav-link" href="#">Test 2</a>
                </div>
            </nav>

            <div class="row">
                <div class="col-sm-2">
                    <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
                        <button type="button" class="btn btn-secondary">Items</button>

                        <div class="btn-group" role="group">
                            <button id="btnGroupVerticalDrop1" type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Emotes
                            </button>
                            <div class="dropdown-menu" aria-labelledby="btnGroupVerticalDrop1">
                                <a class="dropdown-item" href="#" onclick="$('.body').load('/1/emotes/create')">Add Emote</a>
                                <a class="dropdown-item" href="#" onclick="$('.body').load('/1/emotes')">Manage Emotes</a>
                            </div>
                        </div>

                        <div class="btn-group" role="group">
                            <button id="btnGroupVerticalDrop2" type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Polls
                            </button>
                            <div class="dropdown-menu" aria-labelledby="btnGroupVerticalDrop2">
                                <a class="dropdown-item" href="#" onclick="$('.body').load('/1/polls/create')">Add Poll</a>
                                <a class="dropdown-item" href="#" onclick="$('.body').load('/1/polls')">Manage Polls</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-sm-9">
                    <div class="modal fade" id="errModal">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                    <h4 class="modal-title">Error</h4>
                                </div>
                                <div class="modal-body">
                                    <p>One fine body&hellip;</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->

                    <div class="alert" role="alert"></div>
                    <div class="body"></div>
                </div>
            </div>
        </div>

    </body>
</html>
